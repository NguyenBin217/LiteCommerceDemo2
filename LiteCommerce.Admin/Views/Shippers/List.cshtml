@model LiteCommerce.DomainModels.Shipper
@{
    Layout = null;
}


<div class="text-left">
    <p>
        Có tất cả <strong>@ViewBag.RowCount</strong> nhà vận chuyển.
        Bạn đang ở trang <strong>@ViewBag.Page</strong>
        trên tổng số <strong>@ViewBag.PageCount</strong> trang.
    </p>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>ShipperName</th>
            <th>Phone</th>

            @*<th class="text-right">
            <button class="btn btn-xs btn-primary" data-toggle="modal" data-target="#myModal_Add">
                <i class="fa fa-plus"></i>
            </button>
        </th>*@

       
            <th class="text-right">
                <a href="~/Shippers/Add" class="btn btn-xs btn-primary">
                    <i class="fa fa-plus"></i>
                </a>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.model)
        {
            <tr>
                <td>
                    <a href="~/Shippers/Details/@item.ShipperID">@item.ShipperName</a>
                </td>
               
                <td>@item.Phone</td>
   
@*                <td class="text-right">
                    <button class="btn btn-xs btn-info"
                            data-toggle="modal" data-target="#@item.ShipperID">
                        <i class="fa fa-edit"></i>
                    </button>
                    <button class="btn btn-xs btn-danger"
                            data-toggle="modal" data-target=".@item.ShipperID">
                        <i class="fa fa-remove"></i>
                    </button>
                </td>*@
                 <td>
                        <a href="~/Shippers/Edit/@item.ShipperID" class="btn btn-xs btn-info"><i class="fa fa-edit"></i></a>
                        <a href="~/Shippers/Delete/@item.ShipperID" class="btn btn-xs btn-danger"><i class="fa fa-remove"></i></a>
                 </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @for (int page = 1; page <= ViewBag.PageCount; page++)
        {
            if (page == ViewBag.Page)
            {
                <li class="active"><a href="javascript:;">@page</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="getShippers(@page)">@page</a></li>
            }
        }
    </ul>
</div>


