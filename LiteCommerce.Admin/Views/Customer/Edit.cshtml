@model LiteCommerce.DomainModels.Customer
@{

}
<form method="post" action="~/Customer/Save">
    <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
    <div class="form-group">
        <label>Tên Khách hàng:</label>
        <input type="text" class="form-control" name="CustomerName" id="CustomerName" value="@Model.CustomerName" autofocus>
    </div>
    <div class="form-group">
        <label>Tên giao dịch:</label>
        <input type="text" class="form-control" name="ContactName" id="ContactName" value="@Model.ContactName">
    </div>
    <div class="form-group">
        <label>Địa chỉ liên hệ:</label>
        <input type="text" class="form-control" name="Address" id="Address" value="@Model.Address">
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Quốc gia:</label>
                <select class="form-control" name="Country" id="Country" value="@Model.Country">
                    <option>VietNam</option>
                    <option>Nhật bản</option>
                    <option>Hàn Quốc</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Thành phố:</label>
                <select class="form-control" name="City" id="City" value="@Model.City">
                    <option>Ho Chi Minh</option>
                    <option>Tokyo</option>
                    <option>Soul</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Mã bưu chính:</label>
        <input type="text" class="form-control" name="PostalCode" id="PostalCode" value="@Model.City">
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Email:</label>
                <input type="text" class="form-control" name="Email" id="Email" value="@Model.Email">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Password:</label>
                <input type="text" class="form-control" name="Password" id="Password" value="@Model.Password">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Customer/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>
