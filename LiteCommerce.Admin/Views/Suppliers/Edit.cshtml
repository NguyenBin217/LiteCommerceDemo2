
@model LiteCommerce.DomainModels.Supplier
@{

}
<form method="post" action="~/Suppliers/Save">
    @*<input type="hidden" name="SupplierID" value="@Model.SupplierID" />*@
    @Html.HiddenFor(m => m.SupplierID)

    @* <div class="form-group">
            @Html.ValidationSummary()
        </div>*@
    <div class="form-group">
        <label>Tên Nhà cung cấp:</label>
        @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = "autofocus", @id = "SuppliersName" })
        <div class="form-group" style="color: red">
            @Html.ValidationMessageFor(m => m.SupplierName)
        </div>
        @* <input type="text" class="form-control" name="SuppliersName" id="SuppliersName" autofocus value="@Model.SupplierName">*@
    </div>

    <div class="form-group">
        <label>Tên giao dịch:</label>
        @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
        <div class="form-group" style="color: red">
            @Html.ValidationMessageFor(m => m.ContactName)
        </div>
        @* <input type="text" class="form-control" name="ContactName" id="ContactName">*@
    </div>
    <div class="form-group">
        <label>Địa chỉ liên hệ:</label>
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        @*<input type="text" class="form-control" name="Address" id="Address">*@
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Quốc gia:</label>
                @* <select class="form-control" name="Country" id="Country">
                        <option>VietNam</option>
                        <option>Nhật bản</option>
                        <option>Hàn Quốc</option>

                    </select>*@
                @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control" })

            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Thành phố:</label>
                @*<select class="form-control" name="City" id="City">
                        <option>Ho Chi Minh</option>
                        <option>Tokyo</option>
                        <option>Soul</option>
                    </select>*@
                @Html.DropDownListFor(m => m.City, SelectListHelper.Cities(), new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Mã bưu chính:</label>
                @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" , @required= "required"})
                @* <input type="text" class="form-control" name="PostalCode" id="PostalCode">*@
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @required = "required" })
                @* <input type="text" class="form-control" name="Phone" id="Phone">*@
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Suppliers/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>

<script>
    window.onload(function () {
        document.getElementById("SuppliersName").focus();
    })
</script>
