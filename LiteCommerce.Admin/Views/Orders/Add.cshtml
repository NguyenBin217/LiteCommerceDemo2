@model LiteCommerce.DomainModels.Order
@{
    ViewBag.Title = "Cập nhật thông tin mặt hàng";
}
<!--Hiển thị thông tin mặt hàng để sữa đổi-->
<form method="post" action="~/Products/Save">
    <input type="hidden" name="ProductID" value="" />
    <div class="form-group">
        <label>Tên khách hàng:</label>
        <input type="text" class="form-control"
               name="ProductName" id="ProductName" value="" autofocus required>
    </div>
    <div class="form-group">
        <label>Ngày đặt hàng:</label>
        <input type="date" class="form-control" name="Unit" id="Unit" value="" required>
    </div>

    <div class="form-group">
        <label>Nhân viên phụ trách:</label>
        <input type="text" class="form-control" name="Price" id="Price" value="" required>
    </div>

    <div class="row">
        <div class="col-md-4 text-center">
            <button type="submit" class="btn btn-success">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-4 text-center">
            <a href="~/Orders/Edit" class="btn btn-primary">
                <i class="fa fa-edit"></i> Sửa đơn hàng
            </a>
</div>
        <div class="col-md-4 text-center">
            <a href="~/Orders/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>