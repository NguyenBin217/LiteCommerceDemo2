@model LiteCommerce.DomainModels.Employee
@{
    ViewBag.Title = "Xác nhận xóa nhân viên";
}
    <form method="post" action="~/Employees/Delete/@Model.EmployeeID">
        <div class="form-group" style="width: 130px; height: 120px; position: absolute; z-index: 999; right: -5px; padding-left: 10px;">
            <label>Ảnh:</label>
            <img class="img-thumbnail" src="@Model.Photo" style="width : 100px; height : 108px; display : block;" />
            <input type="hidden" class="form-control" name="Photo" id="Photo"
                   value="@Model.Photo">
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Họ: </label>
                    <input type="text" class="form-control" name="LastName" id="LastName"
                           value="@Model.LastName" readonly>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Tên: </label>
                    <input type="text" class="form-control" name="FirstName" id="FirstName"
                           value="@Model.FirstName" readonly>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Ngày sinh: </label>
            <input type="text" class="form-control" name="BirthDate" id="BirthDate"
                   value="@Model.BirthDate" readonly>
        </div>
        <div class="form-group">
            <label>Ghi chú:</label>
            <textarea type="text" class="form-control" name="Notes" id="Notes" readonly>@Model.Notes</textarea>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email:</label>
                    <input type="text" class="form-control" name="Email" id="Email"
                           value="@Model.Email" readonly>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Password:</label>
                    <input type="text" class="form-control" name="Password" id="Password"
                           value="@Model.Password" readonly>
                </div>
            </div>
        </div>
        <div class=" text-danger text-center">
            <p>Bạn thực sự muốn xóa nhân viên này khỏi hệ thống không ?</p>
        </div>
        <div class="row">
            <div class="col-md-6 text-center">
                <button class="btn btn-danger">
                    <i class="fa fa-check"></i> Xác nhận xóa
                </button>
            </div>
            <div class="col-md-6 text-center">
                <a href="~/Employees/Index" class="btn btn-warning">
                    <i class="fa fa-window-close"></i> Bỏ qua
                </a>
            </div>
        </div>
    </form>



