@model LiteCommerce.DomainModels.Employee
@{

}
<form method="post" action="~/Employees/Save">
    <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
    <div class="form-group" style="width: 130px; height: 120px; position: absolute; z-index: 999; right: -5px; padding-left: 10px;">
        <label>Ảnh:</label>
        <img class="img-thumbnail" src="@Model.Photo" style="width : 100px; height : 108px; display : block;" />
        @if(@Model.Photo != null) {
        <input type="hidden" class="form-control" name="Photo" id="Photo"
               value="@Model.Photo">
        } else {
        <input type="hidden" class="form-control" name="Photo" id="Photo"
               value="https://1.bp.blogspot.com/-5WB5iTwGqCo/Vpi0h-0Zg7I/AAAAAAAARVA/0G3xkjy3pik/s1600/Hinh-anh-dep-google-tim-kiem-nhieu-%25281%2529.jpg">
        }
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Họ: </label>
                <input type="text" class="form-control" name="LastName" id="LastName" value="@Model.LastName" required autofocus>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Tên:</label>
                <input type="text" class="form-control" name="FirstName" id="FirstName" value="@Model.FirstName" required>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Ngày sinh:</label>
        <input type="date" class="form-control" name="BirthDate" id="BirthDate" value="@Model.BirthDate" required>
    </div>
    <div class="form-group">
        <label>Ghi chú:</label>
        <textarea type="text" class="form-control" name="Notes" id="Notes" required>@Model.Notes</textarea>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Email:</label>
                <input type="text" class="form-control" name="Email" id="Email" value="@Model.Email" required>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Password:</label>
                <input type="text" class="form-control" name="Password" id="Password" value="@Model.Password" required>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Employees/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>
